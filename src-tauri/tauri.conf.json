{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "HDRI Calibration Interface",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "writeFile": true,
        "readFile": true,
        "copyFile": true,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "scope": ["**"]
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "app": {
        "show": true,
        "hide": true
      },
      "shell": {
        "all": false,
        "execute": true, 
        "open": false,     
        "sidecar": false,  

        "scope": [
          {
            "name": "ximage",                           
            "cmd": "/usr/local/radiance/bin/ximage",          
            "sidecar": false,
            "args": true                                     
          }
        ]
      }
    },

    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "identifier": "hdricalibrationinterface",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": "all"

    },

    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "url": "home-page",
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "HDRI Calibration Interface",
        "width": 1280,
        "minWidth": 1280,
        "minHeight": 800
      }
    ]
  }
}
